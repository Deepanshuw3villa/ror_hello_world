<% if user_signed_in? %>

<h1>Friends List</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><%=link_to friend.first_name + " " + friend.last_name ,friend %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.user_id %></td>
     
        <td><%= link_to 'Destroy', friend,class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
          <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path ,class:"btn btn-primary" %>
<%else%>
<h1>This is Home Page</h1>
Login to See Magic
<%end%>